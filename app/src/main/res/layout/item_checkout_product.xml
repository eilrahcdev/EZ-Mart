<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/bg2"
    android:elevation="5dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/checkout_product_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/checkout_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16sp"
            android:fontFamily="@font/inter_bold" />

        <TextView
            android:id="@+id/checkout_product_variation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Variation:"
            android:textSize="14sp"
            android:fontFamily="@font/inter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start">

            <TextView
                android:id="@+id/checkout_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â‚± 0.00"
                android:fontFamily="@font/inter_bold"
                android:textSize="14sp"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/checkout_product_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="x 0"
                android:textSize="14sp"
                android:layout_marginStart="180dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
