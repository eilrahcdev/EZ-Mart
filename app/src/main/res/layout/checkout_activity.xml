<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/checkout_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/appbar_background"
        android:elevation="10dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/checkoutTb"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:theme="?actionBarTheme"
            android:elevation="15dp">

            <ImageButton
                android:id="@+id/backBtn_checkout"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/arrow_back_blue" />

            <TextView
                android:id="@+id/checkoutTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:layout_gravity="center"
                android:text="Checkout"
                android:textColor="@color/blue"
                android:textSize="20sp" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Product List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/checkout_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg2"
                android:elevation="5dp"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:nestedScrollingEnabled="false"/>

            <!-- Shipping Option -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shipping Option"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_bold"/>

                <TextView
                    android:id="@+id/shipping_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="For Pick-up Only"
                    android:fontFamily="@font/inter"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Payment Option -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment Option"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_bold" />

                <RadioGroup
                    android:id="@+id/payment_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/cash_on_pickup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Cash on Pick-up"
                        android:fontFamily="@font/inter"
                        android:buttonTint="@color/blue"
                        android:textColor="@color/black"/>
                    <RadioButton
                        android:id="@+id/gcash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="G Cash"
                        android:fontFamily="@font/inter"
                        android:buttonTint="@color/blue"
                        android:textColor="@color/black"/>
                    <RadioButton
                        android:id="@+id/paymaya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="PayMaya"
                        android:fontFamily="@font/inter"
                        android:buttonTint="@color/blue"
                        android:textColor="@color/black"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Total Amount & Place Order Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/total_amount"
            android:layout_width="0dp"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"
            android:text="Total: â‚± 0.00"
            android:textSize="15sp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/place_order_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Order"
            app:cornerRadius="@dimen/dimens"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"/>
    </LinearLayout>

</LinearLayout>
